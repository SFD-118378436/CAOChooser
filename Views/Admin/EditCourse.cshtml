@model CAOSelect.Models.CAOSubject

@{
    ViewData["Title"] = "Edit Course";
}

<h1>Edit Course</h1>

<h4>CAO Course</h4>
<hr />
<div class="container">
    
    <div class="col-lg">
        <form asp-action="EditCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseID" class="control-label"></label>
                <input asp-for="CourseID" class="form-control" />
                <span asp-validation-for="CourseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDescription" class="control-label"></label>
                <textarea asp-for="CourseDescription" class="form-control"></textarea>
                <span asp-validation-for="CourseDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <select class="custom-select" asp-for="Level">
                    <option value="none" selected disabled hidden>
                        Select an Option
                    </option>
                    <!--Populating the dropdown list-->
                    <option class="dropdown-item" name="level" value="6">6</option>
                    <option class="dropdown-item" name="level" value="7">7</option>
                    <option class="dropdown-item" name="level" value="8">8</option>
                </select>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThirdLevelInstitute" class="control-label"></label>
                <input asp-for="ThirdLevelInstitute" readonly class="form-control" />
                <span asp-validation-for="ThirdLevelInstitute" class="text-danger"></span>
            </div>

            <!-- https://stackoverflow.com/questions/10004723/html5-input-type-range-show-range-value -->
            <div class="form-group">
                <label asp-for="creative" class="control-label"></label>
                <input asp-for="creative" type="range" min="0" max="100" class="form-control" oninput="this.nextElementSibling.value = this.value" />
                <output>@(Model.creative + "%")</output>
                <span asp-validation-for="creative" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="problemsolving" class="control-label"></label>
                <input asp-for="problemsolving" type="range" min="0" max="100" class="form-control" oninput="this.nextElementSibling.value = this.value" />
                <output>@(Model.problemsolving + "%")</output>
                <span asp-validation-for="problemsolving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="analytical" class="control-label"></label>
                <input asp-for="analytical" type="range" min="0" max="100" class="form-control" oninput="this.nextElementSibling.value = this.value" />
                <output>@(Model.analytical + "%")</output>
                <span asp-validation-for="analytical" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="interpersonal" class="control-label"></label>
                <input asp-for="interpersonal" type="range" min="0" max="100" class="form-control" oninput="this.nextElementSibling.value = this.value" />
                <output>@(Model.interpersonal + "%")</output>
                <span asp-validation-for="interpersonal" class="text-danger"></span>
            </div>
            <div class="container">
                <a class="btn btn-outline-primary" href="@("/Admin/UpdateReqSubject?courseID=" + Model.CourseID)">Update Required Subjects</a>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-danger">Back to Courses</a>
    </div>
</div>
