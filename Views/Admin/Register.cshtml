@{
}

@{
    ViewData["Title"] = "Register";
}
<body>
    <form class="form-signin" asp-action="Registration" asp-controller="Admin">
        <div class="container">
            <h1>Register</h1>
            <p>Please fill in this form to create an account.</p>

            <div class="form-group">
                <label for="Username"><b>Username</b></label>
                <input type="text" class="form-control" placeholder="Enter Username" name="Username" id="Username" required>
            </div>
            <div class="form-row">
                <div class="col">
                    <label for="Password"><b>Password</b></label>
                    <input type="password" class="form-control" placeholder="Enter Password" name="Password" id="Password" required>
                </div>
                <div class="col">
                    <label for="psw-repeat"><b>Repeat Password</b></label>
                    <input type="password" class="form-control" placeholder="Repeat Password" name="psw-repeat" id="psw-repeat" required>
                </div>
            </div>
            <div class="form-group">
                <!--https://getbootstrap.com/docs/5.0/forms/form-control/#datalists-->
                <label for="ThirdLevelInstitute" class="form-label">Third Level Institute</label>
                <input class="form-control" list="datalistOptions" id="tlidrop" name="ThirdLevelInstitute" placeholder="Type to search...">
                <datalist id="datalistOptions">
                    <!--Looping through all colleges and adding them to a drop down list-->
                    @foreach (var college in ViewBag.colleges)
                    {
                        <option class="dropdown-item" name="ThirdLevelInstitute" value="@college">@college</option>
                    }
                </datalist>
            </div>
            <button type="submit" class="registerbtn">Register</button>
        </div>

    </form>
</body>