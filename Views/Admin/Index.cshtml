@{
}
@{
    ViewData["Title"] = "Login";
}

<!--Code found at https://getbootstrap.com/docs/4.0/examples/sign-in/-->
<body class="text-center">
    <form class="form-signin" asp-action="Login" asp-controller="Admin">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

        <div class="form-outline mb-4">
            <label for="Username" class="sr-only">Username</label>
            <input type="text" id="Username" name="Username" class="form-control border" placeholder="Username" required="" autofocus="">
        </div>
        <div class="form-outline mb-4">
            <label for="Password" class="sr-only">Password</label>
            <input type="password" id="Password" name="Password" class="form-control" placeholder="Password" required="">
        </div>

        <div class="form-outline mb-4">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </div>
    </form>
    <div class="form-outline mb-4">
        <a class="btn btn-outline-primary" href="/Admin/Register">Register here!</a>
    </div>
</body>